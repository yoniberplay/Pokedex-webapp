{{#if hasPokemons}}
<div class="container" align="center" style="background-color: #C7DBD2">

    <a class="nav-link " asp-area="" asp-controller="poke" asp-action="Index">
        <h1 class="text-success">Pokedex</h1>
    </a>
    <div class="row row-cols-2">


        <form asp-controller="poke" asp-action="Index" method="post">
            <input class="form-control " type="search" min="1" name="findnombre" placeholder="Busqueda por nombre"
                required="required" />
            <button type="submit" class="btn btn-success mt-2 mb-2">
                <i class="fa-solid fa-magnifying-glass"></i> Busqueda por nombre</button>
        </form>

        <form asp-controller="poke" asp-action="Index" method="post">
            <select class="form-select" id="Tipo" name="TipoId" required>
                <option selected>Seleccione una opcion</option> 

                {{#each Tipos as |tip|}}
                <option value="{{tip.Id}}">{{tip.name}}</option>
                {{/each}}

            </select>
            <button type="submit" class="btn btn-success mt-2 mb-2">
                <i class="fa-solid fa-magnifying-glass"></i> Busqueda por Region</button>
        </form>

        <br />
    </div>
</div>
<br /><br />

<div class="cards-wrapper">

     <div class="row row-cols-4">
        
            {{#each pokemons as |pk|}}
        <div class="card zoom" style="width: 18rem; background-color: #C7DBD2 ">
    <h4 class="card-title mt-2" align="center"> <strong>{{pk.Id}}</strong> {{pk.name}}</h4>
  <img class="card-img-top " src={{pk.imgUrl}} alt="Card image cap">
  <div class="card-body">
    <p class="card-text"> {{pk.description}}
        <br/>
    <strong>Tipo: </strong> {{pk.Tipo.dataValues.name}}
     <br/>
    <strong>Region: </strong>  {{pk.Region.dataValues.name}}
  </div>
</div>
    {{/each}}
    </div>
</div>


{{else}}

<h1>no hay pokemones creados</h1>

{{/if}}