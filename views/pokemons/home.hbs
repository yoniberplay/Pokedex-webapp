

<div class="container" align="center" style="background-color: #C7DBD2">
    <a class="nav-link " href="/">
        <h1 class="text-success">Pokedex</h1>
    </a></div>

  <div class="row">
<div class="row w-75">
{{#if hasPokemons}}
<div class="cards-wrapper">
     <div class="row row-cols-4">        
            {{#each pokemons as |pk|}}
        <div class="card zoom" style="width: 18rem; background-color: #C7DBD2 ">
    <h4 class="card-title mt-2" align="center"> <strong>{{pk.Id}}</strong> {{pk.name}}</h4>
  <img class="card-img-top " src={{pk.imgUrl}} alt="Card image cap">
  <div class="card-body">
    <p class="card-text"> {{pk.description}}
        <br/>
    <strong>Tipo: </strong> {{pk.Tipo.name}}
     <br/>
    <strong>Region: </strong>  {{pk.Region.name}}
  </div>
</div>
    {{/each}}
    </div>
</div>
{{else}}

<h3 class="text-center mt-4">No se han encontrado pokemones</h3>

{{/if}}
</div>

<div class="w-25">

<div class="mt-3">
        <form  method="post" action="/findbyname">
            <input class="form-control " type="search" min="1" name="Name" placeholder="Busqueda por nombre"
                required="required" />
            <button type="submit" class="btn btn-success mt-2 mb-2">
                <i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
        </form></div>
{{#if Regions}}
<div class="">
    <h5 class="text-success text-center">Filtrar</h5>

     {{#each Regions as |tip|}}
      <a href="byregion/{{tip.Id}}" class="list-group-item list-group-item-action ">{{tip.name}}</a>
                {{/each}}
        
        </div>
        {{else}}

        <h5 class="text-center mt-4">No se hay regiones creadas</h5>
        {{/if}}
    </div>

</div>
<br /><br />
