<div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-6">

    <div class="card">
      <div class="card-header bg-dark text-white">
        {{#if editMode}}Edicion{{else}}Creacion{{/if}} de tipos de pokemones
      </div>
      <div class="card-body" style="background-color: #C7DBD2">

        <form method="POST" action="{{#if editMode}}/edit-tipos{{else}}/create-tipos{{/if}}">
          <div class="mb-3">
            <label for="name" class="form-label" >Nombre</label>
            <input required type="text" class="form-control" id="name" name="Name" value="{{#if editMode}}{{tipo.name}}{{/if}}" />
          </div>        

          {{#if editMode}}

          <input type="hidden" name="tipoId" value="{{tipo.Id}}">
          
          {{/if}}

          <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
           <a href="/tipos" type="button" class="btn btn-warning">volver atras</a>
        </form>

      </div>
    </div>

  </div>
  <div class="col-md-6"></div>

</div>